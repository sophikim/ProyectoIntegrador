<body>

	<!-- Header -->
	<%- include('./partials/header.ejs') %> 
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/user1.jpg" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= users.username %>
						<a href="users/profile/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="info-profile">
						<li>4 productos</li>
						<li>100 seguidores</li>
						<li>245 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->

				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products">
							<figure class="product-box_image">
								<img src=" <%= products.picture_product %>" alt="<%= products.name %>">
							</figure>
							<article class="product-box_data">
								<h2><%= products.name %></h2>
								<p> <%= products.description %></p>
								<p>Comentarios: <%= products.cant_comments %></p>
							</article>
						</a>
					</section>
				</div>
 <!-- aca habria que poner algun if para que muestre solo los productos de ese usuario -->


		</div>
	</div>
	<!-- /Mis productos -->

	<!-- footer -->
	<%- include('./partials/footer.ejs') %> 
	<!-- /footer -->

</body>	
</html>