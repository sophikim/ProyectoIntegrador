<body>

	<!-- Header -->
	<%- include('./partials/header.ejs') %>
	<!-- /Header -->

	<!-- Banner -->
	<div class="banner">

	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i=0; i <products.length; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products">
						<figure class="product-box_image">
							<img src=<%= products[i].pictureProduct %> alt=<%= products[i].name %>>
						</figure>
						<article class="product-box_data">
							<h2><%= products[i].name %></h2>
							<p><%= products[i].description %></p>
							<p>Comentarios: <%= products[i].cantComments %></p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>

		<!-- /Novedades -->
		<!-- M치s comentados -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">M치s comentados</h2>
				</div>
				<!-- Show the "ultimos" products -->

					<% for(let i=0; i <4; i++) { %>
							<div class="col-12 col-sm-6 col-lg-3">
								<section class="product-box">
									<a href="/products">
										<figure class="product-box_image">
											<img src="<%= products[i].pictureProduct %>" alt="cafetera moulinex">
										</figure>
										<article class="product-box_data">
											<h2><%= products[i].name %></h2>
											<p><%= products[i].description %></p>
											<p>Comentarios: <%= products[i].cantComments %></p>
										</article>
									</a>
								</section>
							</div>	
					<% } %>

				<!-- quiero que sea random, o poner un condicional para que muestre los m치s comentados, 
				pero cuando lo intente me tira como que no esta bien cerrada la funcion-->
			</div>
		</div>
		<!-- /M치s comentados -->

		<!-- footer -->
		<%- include('./partials/footer.ejs') %>
		<!-- /footer -->

</body>

</html>